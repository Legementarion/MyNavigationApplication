<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@+id/bottomNavFragment">

    <fragment
        android:id="@+id/bottomNavFragment"
        android:name="com.yalantis.mynavigationapplication.PlusOneFragment"
        android:label="Home"
        tools:layout="@layout/fragment_plus_one">
        <action
            android:id="@+id/action_bottomNavFragment_to_itemFragment"
            app:destination="@+id/itemFragment" />
    </fragment>

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.yalantis.mynavigationapplication.ItemFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_item_list" />

</navigation>